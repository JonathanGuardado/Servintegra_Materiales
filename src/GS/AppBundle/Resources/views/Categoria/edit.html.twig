{% extends '::frontend.html.twig' %}

{% block title %} Principal Servintegra {% endblock %}

{% block id 'portada' %}

{% block main %}

<div class="container">

    <h1>Categoria {{ categoria.nombre }}</h1>

    <hr>

    {{ form_start(formulario, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">
        {{ form_label(formulario.nombre, 'Nombre Categoria', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(formulario.nombre, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(formulario.descripcion, 'Descripcion', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(formulario.descripcion, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(formulario.crear, {'label': 'Editar Categoria', 'attr': {'class': 'btn btn-info btn-lg'}}) }}
        </div>
    </div>

    {{ form_end(formulario) }}

</div> <!-- /container -->

{% endblock %}