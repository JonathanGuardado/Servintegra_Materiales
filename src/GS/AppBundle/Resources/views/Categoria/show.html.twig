{% extends '::frontend.html.twig' %}

{% block title %} Principal Servintegra {% endblock %}

{% block id 'portada' %}

{% block main %}

<div class="container">

    <h1>Categoria {{ categoria.nombre }}</h1>

    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>{{ categoria.nombre }}</dd>

        <dt>Descripcion</dt>
        <dd>{{ categoria.descripcion }}</dd>

        <hr>

        <dt>&nbsp;</dt>
        <dd>
            <a href="{{ path('categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning">Editar</a>
            <a href="{{ path('categoria_delete', {'id': categoria.id}) }}" class="btn btn-danger">Eliminar</a>
        </dd>

    </dl>

</div> <!-- /container -->

{% endblock %}