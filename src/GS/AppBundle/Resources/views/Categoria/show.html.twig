{% extends '::frontend.html.twig' %}

{% block title %} Principal Servintegra {% endblock %}

{% block id 'portada' %}

{% block main %}

<div class="container w50">
    <form class="formulario">
    <h1>Categoria {{ categoria.nombreCategoria }}</h1>

    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>{{ categoria.nombreCategoria }}</dd>

        <dt>Descripcion</dt>
        <dd>{{ categoria.descripcionCategoria }}</dd>
        <hr>   
    </dl>
    <div class="B5">
       <a href="{{ path('categoria_edit', {'id': categoria.idCategoria}) }}" class="btn btn-warning " >Editar</a>
       <a href="{{ path('categoria_list') }}" class="btn btn-primary">Regresar al Listado</a>
    </div>
    </form>
</div> <!-- /container -->

{% endblock %}